                <!-- </tr> -->
              <!-- </table> -->
            <!-- </div> -->
          <!-- </div> -->
        <!-- </div> -->
        
      </div>
    </div>
    <!-- Performance End -->
    <hr/>
    <div class="row">
      <div class="col-md-6">
        <h3 class="header">Plan Vs Actual Sales</h3>
        <b>Time Period : {{ dateStringTitle }}</b>
        <hr/>
        <div>
          <ngx-horizontal-bar #horizontalPlan></ngx-horizontal-bar>
        </div>
      </div>

      <div class="col-md-6">
        <h3 class="header">Plan Vs Actual Collector</h3>
        <b>Time Period : {{ dateStringTitle }}</b>
        <hr/>
        <div>
          <ngx-horizontal-bar #horizontalBarCollector></ngx-horizontal-bar>
        </div>
      </div>

    </div>
    <!-- End Row 3 -->
    <hr/>

    <div class="row">
      <div class="col-md-6">
        <h3 class="header">Plan Vs Actual Logistic</h3>
        <b>Time Period : {{ dateStringTitle }}</b>
        <hr/>
        <div>
          <ngx-horizontal-bar #horizontalActual></ngx-horizontal-bar>
        </div>
      </div>

      <div class="col-md-6">
        <h3 class="header">Packing Slip</h3>
        <b>Time Period : {{ dateStringTitle }}</b>
        <hr/>
        <ngx-horizontal-bar #packingSlipBarLogistic></ngx-horizontal-bar>
      </div>
    </div>

